<odoo>
<data>

    <template id="fmt_external_layout_standard">
        <div class="header">

            <div class="container-fluid" >
              <div style="width:100%;" class="row">
                <div class="col-auto" style="width:35%;text-align:left;">
                    <ul class="list-unstyled">
                        <li class="text-center" style="color: #36bbfc;font-weight:bold;font-size:17px;" t-if="company.name">
                            <span t-field="company.name"/>
                        </li>
                        <li style="background-color: #929090;color: white;border-radius: 25px;" class="text-center" t-if="company.partner_id">
                            <p>Road Freight Services</p>
                        </li>
                        <li style="background-color: #929090;color: white;border-radius: 25px;" class="text-center" t-if="company.partner_id">
                            <p>C.R 1116010688</p>
                        </li>
                        <li style="background-color: #929090;color: white;border-radius: 25px;" class="text-center" t-if="company.partner_id">
                            <p>Trans. Lic. No. 010411015500</p>
                        </li>
                        <li class="text-center" style="margin-top:-10px" t-if="company.vat">
                            <p>Vat No. <span t-field="company.vat"/></p>
                        </li>
                    </ul>
                </div>

                <div class="col-auto" style="width:30%;text-align:center;">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="height: 100px;width: 100px;text-align:center;" alt="Logo"/>
                </div>

                <div class="col-auto" style="width:35%;text-align:right;">
                    <ul class="list-unstyled">
                        <li class="text-center" style="color: #36bbfc;font-weight:bold;font-size:18px;" t-if="company.partner_id">
                            <span t-field="company.partner_id.arabic_name"/>
                        </li>
                        <li style="background-color: #929090;color: white;border-radius: 25px;" class="text-center" t-if="company.partner_id">
                            <p>خدمات النقل البري للبضائع</p>
                        </li>
                        <li style="background-color: #929090;color: white;border-radius: 25px;" class="text-center" t-if="company.partner_id">
                            <p>س.ت 1116010688</p>
                        </li>
                        <li style="background-color: #929090;color: white;border-radius: 25px;" class="text-center" t-if="company.partner_id">
                            <p>ترخيص نقل رقم : 010411015500</p>
                        </li>
                        <li class="text-center" style="margin-top:-10px" t-if="company.vat">
                            <p>الرقم الضريي: <span t-field="company.vat"/></p>
                        </li>
                    </ul>
                </div>
              </div>
            </div>
            </div>

        <div class="article o_report_layout_standard"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>

        <div class="footer o_standard_footer">
                <div class="text-center" style="border-top: 1px solid black;">
                    <table width="100%">
                        <tr>
                            <td>
                                <p style="color:#36bbfc;" class="fa fa-phone-square"><span style="color:black;padding-left:3px"><span t-field="company.phone"/></span></p>
                            </td>
                            <td>
                                <p style="color:#36bbfc;" class="fa fa fa-mobile"><span style="color:black;padding-left:3px"><span t-field="company.partner_id.mobile"/></span></p>
                            </td>
                            <td>
                                <p style="color:#36bbfc;" class="fa fa-envelope-o"><span style="color:black;padding-left:3px"><span t-field="company.company_registry"/></span></p>
                            </td>
                            <td>
                                <p style="color:#36bbfc;" class="fa fa-globe"><span style="color:black;padding-left:3px"><span t-field="company.website"/></span></p>
                            </td>

                        </tr>
                    </table>
                    <table width="100%">
                        <tr>
                            <td><span t-field="company.street" /></td>
                            <td style="text-align:right;"><span t-field="company.street2" /></td>
                        </tr>
                    </table>


                    <div name="financial_infos">
                        <span t-field="company.report_footer"/>
                    </div>

                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
    </template>

</data>
</odoo>